<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mainback"
    tools:context=".Demo">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#af000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Leg Excercises"
                    android:textColor="#bcb604"
                    android:textSize="50sp"
                    android:fontFamily="cursive"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/butt"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/dumbbell_lunge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/buttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/circular_back"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#f5f5f5"

                        android:textSize="30dp"

                        app:layout_constraintStart_toStartOf="@+id/butt"
                        app:layout_constraintTop_toBottomOf="@+id/butt" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Dumbbell Lunge"
                        android:textColor="#f5f5f5"
                        android:textSize="28dp"
                        app:layout_constraintStart_toEndOf="@+id/buttext"
                        app:layout_constraintTop_toTopOf="@+id/buttext" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Stand with your torso upright holding two dumbbells in your hands by your sides. This will be your starting position.\n
Step forward with your right leg around 2 feet or so from the foot being left stationary behind and lower your upper body down, while keeping the torso upright and maintaining balance.\n
Inhale as you go down. Note: As in the other exercises, do not allow your knee to go forward beyond your toes as you come down, as this will put undue stress on the knee joint.\n
Make sure that you keep your front shin perpendicular to the ground.\n
Using mainly the heel of your foot, push up and go back to the starting position as you exhale."
                        android:textColor="#f5f5f5"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/number4"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/butt1"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/leg_press"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/buttext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/circular_back"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#f5f5f5"

                        android:textSize="30dp"

                        app:layout_constraintStart_toStartOf="@+id/butt1"
                        app:layout_constraintTop_toBottomOf="@+id/butt1" />

                    <TextView
                        android:id="@+id/textView77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Leg Press"
                        android:textColor="#f5f5f5"
                        android:textSize="28dp"
                        app:layout_constraintStart_toEndOf="@+id/buttext1"
                        app:layout_constraintTop_toTopOf="@+id/buttext1" />

                    <TextView
                        android:id="@+id/textView88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Using a leg press machine, sit down on the machine and place your legs on the platform directly in front of you at a medium (shoulder width) foot stance. (Note: For the purposes of this discussion we will use the medium stance described above which targets overall development; however you can choose any of the three stances described in the foot positioning section).\n
Lower the safety bars holding the weighted platform in place and press the platform all the way up until your legs are fully extended in front of you. Tip: Make sure that you do not lock your knees. Your torso and the legs should make a perfect 90-degree angle. This will be your starting position.\n
As you inhale, slowly lower the platform until your upper and lower legs make a 90-degree angle.\n
Pushing mainly with the heels of your feet and using the quadriceps go back to the starting position as you exhale.\n
Repeat for the recommended amount of repetitions and ensure to lock the safety pins properly once you are done.\n
You do not want that platform falling on you fully loaded."
                        android:textColor="#f5f5f5"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/number4"
                        app:layout_constraintTop_toBottomOf="@+id/textView77" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/butt2"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/reverse_lunges_exercise"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/buttext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/circular_back"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#f5f5f5"

                        android:textSize="30dp"

                        app:layout_constraintStart_toStartOf="@+id/butt2"
                        app:layout_constraintTop_toBottomOf="@+id/butt2" />

                    <TextView
                        android:id="@+id/textView777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Reverse Lunges Exercise"
                        android:textColor="#f5f5f5"
                        android:textSize="28dp"
                        app:layout_constraintStart_toEndOf="@+id/buttext2"
                        app:layout_constraintTop_toTopOf="@+id/buttext2" />

                    <TextView
                        android:id="@+id/textView888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Stand upright, with your hands at your hips\n
Take a large step backward with your left foot\nLower your hips so that your right thigh (front leg) becomes parallel to the floor with your right knee positioned directly over your ankle. Your left knee should be bent at a 90-degree angle and pointing toward the floor with your left heel lifted.
\nReturn to standing by pressing your right heel into the floor and bringing your left leg forward to complete one rep\nAlternate legs, and step back with right leg"
                        android:textColor="#f5f5f5"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/number4"
                        app:layout_constraintTop_toBottomOf="@+id/textView777" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
