<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mainback"
    tools:context=".Demo">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#af000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chest Excercises"
                    android:textColor="#bcb604"
                    android:textSize="50sp"
                    android:fontFamily="cursive"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/butt"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/bench_pressing"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/buttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/circular_back"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#f5f5f5"

                        android:textSize="30dp"

                        app:layout_constraintStart_toStartOf="@+id/butt"
                        app:layout_constraintTop_toBottomOf="@+id/butt" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Bench Pressing"
                        android:textColor="#f5f5f5"
                        android:textSize="28dp"
                        app:layout_constraintStart_toEndOf="@+id/buttext"
                        app:layout_constraintTop_toTopOf="@+id/buttext" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Lie on the bench with your eyes under the bar\nGrab the bar with a medium grip-width (thumbs around the bar!)
        Then rise back up, straightening the legs completely and squeezing the glutes at the top of the movement to get the most from the exercise.\n
        Unrack the bar by straightening your arms\nLower the bar to your mid-chest\nPress the bar back up until your arms are straight

        Do as many squats as you can for 30 seconds."
                        android:textColor="#f5f5f5"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/number4"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/butt1"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/triceps_dips"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/buttext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/circular_back"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#f5f5f5"

                        android:textSize="30dp"

                        app:layout_constraintStart_toStartOf="@+id/butt1"
                        app:layout_constraintTop_toBottomOf="@+id/butt1" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Tricep Dips"
                        android:textColor="#f5f5f5"
                        android:textSize="28dp"
                        app:layout_constraintStart_toEndOf="@+id/buttext1"
                        app:layout_constraintTop_toTopOf="@+id/buttext1" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Lie on the bench with your eyes under the bar\nGrab the bar with a medium grip-width (thumbs around the bar!)
        Then rise back up, straightening the legs completely and squeezing the glutes at the top of the movement to get the most from the exercise.\n
        Unrack the bar by straightening your arms\nLower the bar to your mid-chest\nPress the bar back up until your arms are straight

        Do as many squats as you can for 30 seconds."
                        android:textColor="#f5f5f5"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/number4"
                        app:layout_constraintTop_toBottomOf="@+id/textView1" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/butt2"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/machine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/buttext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/circular_back"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#f5f5f5"

                        android:textSize="30dp"

                        app:layout_constraintStart_toStartOf="@+id/butt2"
                        app:layout_constraintTop_toBottomOf="@+id/butt2" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Machine Bench Pressing"
                        android:textColor="#f5f5f5"
                        android:textSize="28dp"
                        app:layout_constraintStart_toEndOf="@+id/buttext2"
                        app:layout_constraintTop_toTopOf="@+id/buttext2" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Lie on the bench with your eyes under the bar\nGrab the bar with a medium grip-width (thumbs around the bar!)
        Then rise back up, straightening the legs completely and squeezing the glutes at the top of the movement to get the most from the exercise.\n
        Unrack the bar by straightening your arms\nLower the bar to your mid-chest\nPress the bar back up until your arms are straight

        Do as many squats as you can for 30 seconds."
                        android:textColor="#f5f5f5"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/number4"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </ScrollView>


    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>
